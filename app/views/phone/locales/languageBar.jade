if currentLocale().locale == "en"
    span #{'en'}
if currentLocale().locale == "cz"
    span #{'cz'}
if currentLocale().locale == "es"
    span #{'es'}
if currentLocale().locale == "ru"
    span #{'ru'}
ul.language-bar
    each loc in locales()
        if loc.locale != currentLocale().locale
            if loc.locale == 'en'
                li: a(href="#{loc.uri}") en
            else
                if loc.locale == 'cz'
                    li: a(href="#{loc.uri}") cz
                else
                    if loc.locale == 'es'
                        li: a(href="#{loc.uri}") es
                    else
                        li: a(href="#{loc.uri}") ru